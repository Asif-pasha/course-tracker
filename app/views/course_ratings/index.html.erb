<p id="notice"><%= notice %></p>

<h1>Listing Course Ratings</h1>

<table border="1">
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Rating</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @course_ratings.each do |course_rating| %>
      <tr>
        <td><%= course_rating.student.name %></td>
        <td><%= course_rating.course.name %></td>
        <td><%= course_rating.rating %></td>
        <td><%= link_to 'Show', course_rating %></td>
        <td><%= link_to 'Edit', edit_course_rating_path(course_rating) %></td>
        <td><%= link_to 'Destroy', course_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

