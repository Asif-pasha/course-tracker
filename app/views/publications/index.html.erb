
<div class="row"></div>
<div class="col-md-8">
<h2>Listing Publications</h2>

<table  class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th>Link</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.user_id%></td>
        <td><%= publication.title %></td>
        <td><%= publication.body %></td>
        <td><%= publication.link %></td>
        <td><%= link_to 'Show', publication %></td>
        <% if user_signed_in? %>
            <% if can? :update, publication %>
            <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
            <% end %>
            <% if can? :destroy, publication %>
            <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="col-md-4"></div>
<h4> Add Publications</h4>
<% if user_signed_in? && (can? :create, Publication) %>
<%= link_to 'New Publication', new_publication_path %>
<% end %>
</div>